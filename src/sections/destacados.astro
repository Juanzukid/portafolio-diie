import Card from "../components/Card1.astro";
import CardProject from "../components/CardProject.astro";
import { projects } from "../../public/seed/projects.js";

console.log(projects);

// const projects = await db.select().from(Projects);
---

<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
/>

<style>
  .swiper {
    width: 100%;
    padding-top: 50px;
    padding-bottom: 50px;
  }
</style>

<section id="Destacados" class="h-screen snap-center">
  <div class="text-white text-center text-5xl mt-28 mb-12">
    PROYECTOS DESTACADOS
  </div>
  <div class="w-[75%] mx-auto flex justify-center align-middle gap-5">
    <div class="swiper SwiperDestacados">
      <div class="swiper-wrapper">
        {projects.map((project) => <CardProject project={project} />)}
      </div>
      <div class="swiper-pagination"></div>
    </div>
  </div>
</section>

<script type="module">
  import Swiper from "https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.mjs";

  var swiperDestacados = new Swiper(".SwiperDestacados", {
    effect: "coverflow",
    grabCursor: true,
    centeredSlides: true,
    slidesPerView: "auto",
    coverflowEffect: {
      rotate: 50,
      stretch: -50,
      depth: 50,
      modifier: 1,
      slideShadows: true,
    },
    pagination: {
      el: ".swiper-pagination",
    },
  });
</script>
